doctype html
html
  head
    script(src="https://cdn.tailwindcss.com")
    title Book Tracker
  body.bg-gray-100.p-8
    h1.text-3xl.font-bold.mb-6 ðŸ“š My Book Tracker
    p.font-semibold.mb-2 Total books read: #{totalBooksRead}
    p.font-semibold.mb-6 Total pages read: #{totalPages}

    // ðŸ”¹ Bouton global pour ajouter un livre
    div.mb-6
      a(class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" href="/books/add") + Add Book

    // ðŸ”¹ Tableau des livres
    table.w-full.mt-6.border-collapse
      thead
        tr.bg-gray-200
          th.p-2 Title
          th.p-2 Author
          th.p-2 Progress
          th.p-2 Status
          th.p-2 Format
          th.p-2 Actions
      tbody
       each book in books
        tr(class="border-b bg-white hover:bg-gray-50")
          td.p-2= book.title
          td.p-2= book.author
          td.p-2 #{Math.round((book.pagesRead / book.pages) * 100)}%
          td.p-2= book.status
          td.p-2= book.format
          td.p-2.text-center.flex.gap-2.justify-center
            // Edit
            form(method="GET", action=`/books/edit/${book.id}`)
              button(class="bg-yellow-500 text-white px-3 py-1 rounded hover:bg-yellow-600" type="submit") Edit
            // Delete
            form(method="POST", action=`/books/delete/${book.id}`)
              button(class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600" type="submit") Delete
